<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="net.study.domain.todo.dao.TodoDao">

    <insert id="addItem" parameterType="todoItem">
        INSERT INTO TODO_ITEM(CONTENT, SEQ)
        SELECT #{content}, (SELECT COALESCE(MAX(SEQ), 0) + 1 FROM TODO_ITEM)
    </insert>

    <select id="getList" resultType="todoItem">
        SELECT *
        FROM TODO_ITEM
    </select>

    <update id="updateItem" parameterType="todoItem">
        UPDATE TODO_ITEM
        SET CONTENT   = COALESCE(NULLIF(#{content}, ""), content),
            COMPLETED = #{completed}
        WHERE ID = #{id};
    </update>

    <delete id="deleteItemById" parameterType="int">
        DELETE
        FROM TODO_ITEM
        WHERE id = #{id};
    </delete>

    <select id="findById" parameterType="int" resultType="todoItem">
        SELECT
            *
        FROM TODO_ITEM
        WHERE id = #{id}
    </select>
</mapper>